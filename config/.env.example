# =============================================================================
# AMM-500: US500-USDH Market Making Bot Configuration
# =============================================================================
# Copy to .env and fill in your credentials. NEVER commit .env to git!

# -----------------------------------------------------------------------------
# API Credentials (Required)
# -----------------------------------------------------------------------------
PRIVATE_KEY=0x_YOUR_PRIVATE_KEY_HERE
WALLET_ADDRESS=0x_YOUR_WALLET_ADDRESS_HERE
API_WALLET_ADDRESS=0x_YOUR_API_WALLET_HERE

# -----------------------------------------------------------------------------
# Trading Parameters (US500-USDH Optimized)
# -----------------------------------------------------------------------------
SYMBOL=US500
LEVERAGE=5
COLLATERAL=1000
MAX_EXPOSURE=250000
MIN_SPREAD_BPS=1
MAX_SPREAD_BPS=5
ORDER_LEVELS=15
ORDER_SIZE_FRACTION=0.02
LOT_SIZE=0.0001

# -----------------------------------------------------------------------------
# Execution Settings
# -----------------------------------------------------------------------------
REBALANCE_INTERVAL=0.5
QUOTE_REFRESH_INTERVAL=2.0
MAX_ORDERS_PER_BATCH=40

# -----------------------------------------------------------------------------
# Risk Management
# -----------------------------------------------------------------------------
MAX_DRAWDOWN=0.02
STOP_LOSS_PCT=0.02
TAKER_RATIO_CAP=0.05
INVENTORY_SKEW_THRESHOLD=0.015
FUNDING_HEDGE_THRESHOLD=0.0001
MIN_MARGIN_RATIO=0.10

# -----------------------------------------------------------------------------
# Network Settings
# -----------------------------------------------------------------------------
TESTNET=False
MAINNET_URL=https://api.hyperliquid.xyz
MAINNET_WS_URL=wss://api.hyperliquid.xyz/ws

# -----------------------------------------------------------------------------
# Data Sources
# -----------------------------------------------------------------------------
USE_XYZ100_PRIMARY=true
BTC_FALLBACK_ENABLED=true
TARGET_VOLATILITY=0.12

# -----------------------------------------------------------------------------
# ML/PyTorch
# -----------------------------------------------------------------------------
ML_VOLATILITY_PREDICT=true
ML_MODEL_PATH=data/vol_model.pt

# -----------------------------------------------------------------------------
# Alerts (Optional)
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=
ALERT_EMAIL=

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_TRADES=true
